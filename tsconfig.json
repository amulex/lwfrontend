{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "lib",
    "declaration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "es2015.promise",
      "es2017",
      "es2017.object"
    ],
    "baseUrl": ".",
    "downlevelIteration": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/demo.ts"
  ]
}
